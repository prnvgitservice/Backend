{
  "family": "backend-api-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",

  "executionRoleArn": "arn:aws:iam::347201599372:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::347201599372:role/ecsTaskExecutionRole",

  "containerDefinitions": [
    {
      "name": "backend-api",
      "image": "347201599372.dkr.ecr.eu-north-1.amazonaws.com/backend-api:latest",
      "essential": true,

      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
        }
      ],

      "environment": [
        {
          "name": "PORT",
          "value": "8080"
        }
      ],

      "secrets": [
        {
          "name": "MONGO_URI",
          "valueFrom": "arn:aws:secretsmanager:eu-north-1:347201599372:secret:backend-api-secrets:MONGO_URI::"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:eu-north-1:347201599372:secret:backend-api-secrets:JWT_SECRET::"
        },
        {
          "name": "CLOUD_NAME",
          "valueFrom": "arn:aws:secretsmanager:eu-north-1:347201599372:secret:backend-api-secrets:CLOUD_NAME::"
        },
        {
          "name": "CLOUD_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:eu-north-1:347201599372:secret:backend-api-secrets:CLOUD_API_KEY::"
        },
        {
          "name": "CLOUD_API_SECRET",
          "valueFrom": "arn:aws:secretsmanager:eu-north-1:347201599372:secret:backend-api-secrets:CLOUD_API_SECRET::"
        }
      ],

      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/backend-api",
          "awslogs-region": "eu-north-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}